<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="12dp"
    android:layout_margin="4dp"
    android:backgroundTint="@color/orange_primary"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="12dp"
        android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_bg_profile_fav"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bg_profile_fav"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/iv_bg_profile_fav"
                app:layout_constraintStart_toStartOf="@id/iv_bg_profile_fav"
                app:layout_constraintEnd_toEndOf="@id/iv_bg_profile_fav"
                app:layout_constraintBottom_toBottomOf="@id/iv_bg_profile_fav"
                android:text="D"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dhouston"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/iv_bg_profile_fav"
                app:layout_constraintTop_toTopOf="@id/iv_bg_profile_fav"
                app:layout_constraintBottom_toBottomOf="@id/iv_bg_profile_fav"/>
            <TextView
                android:id="@+id/tv_title_fav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:textSize="16sp"
                android:text="My YC app: Dropbox - Throw away your USB drive"
                app:layout_constraintTop_toBottomOf="@id/iv_bg_profile_fav"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
           <androidx.cardview.widget.CardView
               android:id="@+id/cv_up"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="12dp"
               app:layout_constraintTop_toBottomOf="@id/tv_title_fav"
               app:cardCornerRadius="8dp"
               android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toBottomOf="parent"
               android:backgroundTint="@color/orange_primary"
               app:layout_constraintStart_toStartOf="@id/tv_title_fav">
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <ImageView
                       android:id="@+id/iv_ic_up_fav"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="4dp"
                       android:layout_marginBottom="4dp"
                       android:layout_marginStart="6dp"
                       android:src="@drawable/ic_up_white"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"/>
                   <TextView
                       android:id="@+id/tv_num_up_fav"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="124"
                       android:layout_marginStart="4dp"
                       android:textColor="@color/white"
                       android:layout_marginEnd="6dp"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="@id/iv_ic_up_fav"
                       app:layout_constraintBottom_toBottomOf="@id/iv_ic_up_fav"
                       app:layout_constraintStart_toEndOf="@id/iv_ic_up_fav"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
           </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_fav"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:backgroundTint="@color/orange_primary"
                app:layout_constraintStart_toEndOf="@id/cv_up">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_ic_comment_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/ic_comment_white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/tv_num_comment_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/white"
                        android:layout_marginEnd="6dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/iv_ic_comment_fav"
                        app:layout_constraintBottom_toBottomOf="@id/iv_ic_comment_fav"
                        app:layout_constraintStart_toEndOf="@id/iv_ic_comment_fav"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>